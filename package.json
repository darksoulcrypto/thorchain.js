{
  "name": "multichain-sdk",
  "version": "1.0.1",
  "description": "Javascript SDK for Thorchain",
  "keywords": [
    "THORChain",
    "SDK",
    "Typescript"
  ],
  "author": "skyorion427",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "clean": "rimraf lib/**",
    "test": "jest",
    "test:coverage": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\"",
    "prepublish": "tsc --build"
  },
  "dependencies": {
    "@binance-chain/javascript-sdk": "^4.1.1",
    "@polkadot/api": "^3.7.3",
    "@xchainjs/xchain-binance": "^4.4.2",
    "@xchainjs/xchain-bitcoin": "^0.11.0",
    "@xchainjs/xchain-client": "^0.6.0",
    "@xchainjs/xchain-cosmos": "^0.8.1",
    "@xchainjs/xchain-crypto": "^0.2.3",
    "@xchainjs/xchain-ethereum": "^0.12.1",
    "@xchainjs/xchain-litecoin": "^0.3.0",
    "@xchainjs/xchain-polkadot": "^0.4.1",
    "@xchainjs/xchain-thorchain": "^0.12.0",
    "@xchainjs/xchain-util": "^0.2.4",
    "bignumber.js": "^9.0.1",
    "bitcoinjs-lib": "^5.2.0",
    "cosmos-client": "^0.39.2",
    "ethers": "^5.0.30",
    "midgard-sdk": "^1.0.0",
    "tiny-invariant": "^1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@openapitools/openapi-generator-cli": "^2.1.16",
    "@types/cron": "^1.7.2",
    "@types/eslint": "^7.2.6",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.17.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ]
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  }
}
